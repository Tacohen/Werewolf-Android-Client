<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wm.werewolf_client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.wm.werewolf_client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wm.werewolf_client.Stats"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Stats" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wm.werewolf_client.Play"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Play" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wm.werewolf_client.Register"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Register" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wm.werewolf_client.Validate"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Validate" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.wm.werewolf_client.ServerRegistration"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ServerRegistration" />
            </intent-filter>
        </activity>
    </application>

</manifest>
